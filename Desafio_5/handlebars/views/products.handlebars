{{> navbar}}
<br/>

<h2> {{title}} </h2>

{{#if exists}}
 <div class="catalog">
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Img</th>
        </tr>
            {{#each list }}
                <tr>
                    <td>{{this.title}}</td>
                    <td>$ {{this.price}}</td>
                    <td><img class="productImage" src="{{this.thumbnail}}" alt="Imagen del producto"></td>
                </tr>
            {{/each}}
    </table>
    <br>
    <a class="addButton" href="http://localhost:8080/">Agregar m√°s productos al Stock</a>
 </div>
{{else}}
    <h2>No hay productos en stock!</h2>
    <a href="http://localhost:8080/" class="addButton" >Agregar un producto</a>
{{/if}}

<br/>
{{> footer}}